<div class="clearfix">
  <div class="btn-group pull-left">
    <a href="/tickets" class="btn btn-default">我的工单</a>
    <a href="/history" class="btn btn-default active">我的任务</a>
  </div>
  <a class="btn btn-primary" href="/tickets/new" style="margin-left: 10px;">新建工单</a>
  <% include browser_notification %>
</div>

<hr>

<div>
    <div>
        <ul class="nav nav-tabs">
            <li id="all_link">
              <a href="/history">所有</a>
            </li>
            <li id="consult_link">
                <a href="/history?type=consult">咨询流程</a>
            </li>
            <li id="complain_link">
                <a href="/history?type=complain">投诉流程</a>
            </li>
            <li id="new_link">
                <a href="/history?type=new">新品处理流程</a>
            </li>
            <li id="cancelOrders_link">
                <a href="/history?type=cancelOrders">退货处理流程</a>
            </li>
            <li id="skill_link">
                <a href="/history?type=skill">技术问题反馈</a>
            </li>
            <li id="market_link">
                <a href="/history?type=market">市场合作</a>
            </li>
        </ul>

        <table class="table table-borderless table-sortable">
            <thead>
              <tr>
                <th data-sort="int">工单ID</th>
                <th data-sort="string">标题</th>
                <th data-sort="string">发送人</th>
                <th data-sort="string">咨询人</th>
                <th data-sort="string">关联餐馆ID</th>
                <th data-sort="string">关联订单ID</th>
                <th data-sort="string">状态</th>
                <th data-sort="string">类型</th>
                <th data-sort="string">待跟进人</th>
                <th data-sort="int" data-sort-default="desc" data-sort-onload>创建时间</th>
              </tr>
            </thead>
            <tbody>
            <% tickets.forEach (function (ticket){  %>
            <% if( ticket.followUser== mClient.username ){ %>
            <tr>
              <td class="table-id" data-sort-value="<%=ticket.ticket_id%>">#<%= ticket.ticket_id%></td>
              <td class="table-title"><a href="/tickets/<%=ticket.id%>/threads" title="#<%= ticket.ticket_id %>"><%= ticket.title %></a></td>
              <td class="table-type"><%= ticket.username %></td>
              <td class="table-type"><%= ticket.consultUser %></td>
              <td class="table-type"><%= ticket.restaurantID %></td>
              <td class="table-type"><%= ticket.orderId %></td>
              <td class="table-type"><%= ticket.statype %></td>
              <td class="table-type"><%= ticket.type %></td>
              <td class="table-type"><%= ticket.followUser %></td>
              <td class="table-date"><%= ticket.createdAtLong %></td>
            </tr>
            <% } %>
            <%} ) %>
            </tbody>
        </table>
    </div>
  <div class="search-page">
    <ul class="pagination">
      <% if(back >= 0) { %>
      <% if(type != null) { %>
      <li><a href="/history?type=<%= type %>&skip=<%= back %>">上一页</a></li>
      <% }else{ %>
      <li><a href="/history?skip=<%= back %>">上一页</a></li>
      <% } %>
      <% } %>
      <% if(next > 0) { %>
      <% if(type != null) { %>
      <li><a href="/history?type=<%= type %>&skip=<%= next %>">下一页</a></li>
      <% }else{ %>
      <li><a href="/history?skip=<%= next %>">下一页</a></li>
      <% } %>
      <% } %>
    </ul>
  </div>
</div>

<script type="text/javascript">
    var url = document.URL;
    if (/.*type=consult.*/.exec(url)){
        $('#consult_link').attr('class','active');
    }else if (/.*type=complain.*/.exec(url)){
        $('#complain_link').attr('class','active');
    }else if (/.*type=new.*/.exec(url)){
        $('#new_link').attr('class','active');
    }else if (/.*type=cancelOrders.*/.exec(url)){
        $('#cancelOrders_link').attr('class','active');
    }else if (/.*type=skill.*/.exec(url)){
        $('#skill_link').attr('class','active');
    }else if (/.*type=market.*/.exec(url)){
        $('#market_link').attr('class','active');
    }
</script>

